<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/soft_pink"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="cursive"
        android:textColor="@color/black"
        android:text=" &quot; Hello from Mia! &quot; "
        android:layout_centerHorizontal="true"
        android:layout_marginTop="120dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:textAlignment="center"
        android:textSize="50sp" />

    <TextView
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:layout_marginBottom="25dp"
        android:background="@color/mint"
        android:fontFamily="casual"
        android:text="Click to change text color"
        android:textColor="@color/deep_sea"
        android:padding="9dp"
        android:layout_alignParentBottom="true"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/changeBackgroundButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/button"
        android:layout_marginBottom="20dp"
        android:layout_centerHorizontal="true"
        android:background="@color/mint"
        android:fontFamily="casual"
        android:padding="9dp"
        android:text="Click to change background color"
        android:textColor="@color/deep_sea"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/changeTextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/changeBackgroundButton"
        android:layout_marginBottom="20dp"
        android:layout_centerHorizontal="true"
        android:background="@color/mint"
        android:fontFamily="casual"
        android:padding="9dp"
        android:text="Click to change text"
        android:textColor="@color/deep_sea"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/editText"
        android:layout_above="@id/changeTextButton"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:fontFamily="casual"
        android:padding="9dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:textAlignment="center"
        android:hint="Enter your own text!" />

    <TextView
        android:id="@+id/changeCustomTextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/editText"
        android:layout_marginBottom="15dp"
        android:layout_centerHorizontal="true"
        android:background="@color/mint"
        android:fontFamily="casual"
        android:padding="9dp"
        android:text="Click to change to your custom text"
        android:textColor="@color/deep_sea"
        android:textSize="20sp" />

</RelativeLayout>